<AssignMessage async="false" continueOnError="false" enabled="true" name="Assign-Token-Response-CC">
    <DisplayName>Assign: Token Response CC</DisplayName>
    <FaultRules/>
    <Properties/>
    <Set>
        <Headers>
            <Header name="Cache-Control">no-store</Header>
            <Header name="Pragma">no-cache</Header>
        </Headers>
        <Payload contentType="application/json" variablePrefix="$" variableSuffix="%">
			{
              "access_token": "$apigee.access_token%",
              "token_type": "Bearer",
              "expires_in": $expires_in%
  			}
		</Payload>
        <StatusCode>200</StatusCode>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo type="response" transport="http" createNew="true"></AssignTo>
</AssignMessage>
