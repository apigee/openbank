<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Assign-JWT-Payload">
    <DisplayName>Assign: ID Token Payload</DisplayName>
    <Properties/>
    <AssignVariable>
        <Name>iss</Name>
        <Value>https://{{ org }}-{{ env }}</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>aud</Name>
        <Ref>client_id</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>amr</Name>
        <Value>UID_PWD</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>azp</Name>
        <Ref>client_id</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>auth_time</Name>
        <Ref>system.timestamp</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>iat</Name>
        <Ref>system.timestamp</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>exp</Name>
        <Value>566</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>nonce</Name>
        <Ref>nonce</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>token_type</Name>
        <Value>Bearer</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>sessionid</Name>
        <Ref>auth.transaction.session.id</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>secret</Name>
        <Ref>oauthv2client.Get-Application-Attributes.client_secret</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>baas_access_token</Name>
        <Ref>request.formparam.baas_access_token</Ref>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>