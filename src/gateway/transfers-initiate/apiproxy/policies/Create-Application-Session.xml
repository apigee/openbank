<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Create-Application-Session">
    <DisplayName>Assign: Application Session</DisplayName>
    <FaultRules/>
    <Properties/>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="true" transport="http" type="request">session.request</AssignTo>
    <Set>
        <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
			{
               "client_id" : "%client_id#",
               "response_type" : "%response_type#",
          	   "response_type_token" : "%response_type_token#",
          	   "response_type_id_token" : "%response_type_id_token#",
               "response_type_code" : "%response_type_code#",
               "scope" : "%scope#",
               "redirect_uri":"%redirect_uri#",
               "req_state":"%req_state#",
               "appName":"%developer.app.name#",
               "nonce":"%nonce#",
               "display":"%display#",
               "login_hint":"%login_hint#",
               "open_id":"true",
          	   "acr_values":"%acr_values#",
          	   "prompt":"%prompt#",
          	   "offline":"%offline#",
          	   "applicationname":"%applicationname#",
          	   "applicationdesc":"%applicationdesc#",
          	   "id_token_hint":"%id_token_hint#",
          	   "ui_locales":"%ui_locales#",
          	   "tandcs":"%tandcs#",
          	   "applicationid":"%applicationid#",
          	   "amount":"%jwt.claims.paymentinfo.value.amount#",
               "to":"%jwt.claims.paymentinfo.to.account_id#", 
          	   "currency":"%jwt.claims.paymentinfo.value.currency#",
               "sort_code":"%jwt.claims.paymentinfo.to.sort_code#",
               "IBAN":"%jwt.claims.paymentinfo.to.IBAN#"          	   
              }
		</Payload>
    </Set>
</AssignMessage>