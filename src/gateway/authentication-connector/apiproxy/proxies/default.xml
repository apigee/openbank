<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Security-Verify-API-Key</Name>
            </Step>
            <Step>
                <Name>Extract-Username</Name>
            </Step>
            <Step>
                <Name>Assign-Get-Method</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>Extract-Customer-Response</Name>
            </Step>
            <Step>
                <Name>Assign-Customer-Info-Response</Name>
            </Step>
        </Response>
    </PreFlow>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/internal/connector/v1/authenticate</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>