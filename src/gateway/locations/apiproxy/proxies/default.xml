<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Extract.RequestLocationParams</Name>
            </Step>
            <Step>
                <Name>Fault.InvalidQueryParams</Name>
                <Condition>(latitude != null and longitude == null) or (latitude == null and longitude != null) or (latitude == null and longitude == null and radius != null) or (openingDay ==null and openAt !=null)</Condition>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="atms">
            <Condition>proxy.pathsuffix MatchesPath "/atms" and request.verb = "GET"</Condition>
        </Flow>
        <Flow name="branches">
            <Condition>proxy.pathsuffix MatchesPath "/branches" and request.verb = "GET"</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/apis/v2.0.1/locations</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>